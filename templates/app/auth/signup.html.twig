{% trans_default_domain "users" %}
{% extends 'inner.html.twig' %}
{% form_theme form 'includes/fields.html.twig' %}

{% block title %}Sign Up{% endblock %}
{% set h1 = 'Sign Up' %}

{% block body %}
    <div class="content__form">
        <div class="row">
            <div class="col-6">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.firstName) }}
                    <div class="input-group">
                        {{ form_widget(form.firstName, {'attr': {'placeholder': 'First Name'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.lastName) }}
                    <div class="input-group">
                        {{ form_widget(form.lastName, {'attr': {'placeholder': 'Last Name'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.email) }}
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.password) }}
                    <div class="input-group">
                        {{ form_widget(form.password, {'attr': {'placeholder': 'Password'}}) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-success">{% trans %}Create Account{% endtrans %}</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}