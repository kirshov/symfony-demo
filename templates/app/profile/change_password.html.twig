{% trans_default_domain "users" %}
{% extends 'inner.html.twig' %}
{% form_theme form 'includes/fields.html.twig' %}

{% block title %}Change password{% endblock %}
{% set h1 = 'Change password' %}

{% block body %}
    <div class="content__form">
        <div class="row">
            <div class="col-6">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.oldpassword) }}
                    <div class="input-group">
                        {{ form_widget(form.oldpassword, {'attr': {'placeholder': 'Old password'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.password) }}
                    <div class="input-group">
                        {{ form_widget(form.password, {'attr': {'placeholder': 'New password'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.repassword) }}
                    <div class="input-group">
                        {{ form_widget(form.repassword, {'attr': {'placeholder': 'Repeat new password'}}) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-success">{% trans %}Change password{% endtrans %}</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}